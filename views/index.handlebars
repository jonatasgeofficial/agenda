<div class="container">
  <div class="card">
    <div class="card-content">
      <h4 class="left" style="margin:0">Eventos</h4>
      <a class="btn-floating btn-large waves-effect waves-light btn modal-trigger right" href="#modal1">
        <i class="material-icons">add</i>
      </a>
      <form id="form" action="/" method="post" onsubmit="submitForm()">

        <div id="modal1" class="modal modal-fixed-footer">
          <div class="modal-content">
            <h4>Evento</h4>
            <br>
            <input type="hidden" name="id" placeholder="Id" required>
            <input type="text" name="ano" placeholder="Ano" required>
            <input type="text" name="mes" placeholder="Mes" required>
            <input type="text" name="dia" placeholder="Dia" required>
            <input type="text" name="evento" placeholder="Evento" required>
          </div>
          <div class="modal-footer">
            <button type="button" onclick="cancel()" class="modal-close waves-effect btn-flat">cancel</a>
              <button class="btn">save</button>
          </div>
        </div>
      </form>

      <table class="table">
        <thead>
          <tr>
            <th>Data</th>
            <th>Evento</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each eventos}}
          <tr>
            <td>{{dia}}/{{mes}}/{{ano}}</td>
            <td>{{evento}}</td>
            <td class="right-align">
              <i class="material-icons teal-text cursor-pointer" onclick="deleteEvento('{{_id}}')">
                delete
              </i>
              <i class="material-icons teal-text cursor-pointer" onclick="updateEvento('{{ano}}','{{mes}}','{{dia}}','{{evento}}','{{_id}}')">
                edit
              </i>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="3">
              <div class="center-align" role="alert">
                Sem eventos
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>